{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    //    "noUnusedParameters": true,
    //    "noUnusedLocals": true,
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "lib": ["ES6"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "roqueform": ["./packages/roqueform/src/main"],
      "roqueform/plugin/*": ["./packages/roqueform/src/main/plugin/*"]
    }
  },
  "include": ["./packages/*/src/**/*"]
}
