{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "NodeNext",
    "jsx": "react",
    "lib": ["DOM", "ES2020"],
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "roqueform": ["./packages/roqueform/src/main/index.ts"],
      "roqueform/plugin/*": ["./packages/roqueform/src/main/plugin/*.ts"]
    }
  },
  "include": ["./packages/*/src/**/*"]
}
