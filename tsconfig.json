{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "target": "ES2017",
    "module": "NodeNext",
    "jsx": "react",
    "lib": ["DOM", "ES2017", "ES2020.BigInt"]
  },
  "include": ["./packages/*/src/**/*"]
}
