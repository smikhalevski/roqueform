{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "target": "ES2023",
    "module": "NodeNext",
    "jsx": "react",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["./packages/*/src/**/*"]
}
