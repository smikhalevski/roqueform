{
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "rimraf './docs' && npm run clean --workspaces",
    "test": "npm t --workspaces",
    "docs:build": "typedoc",
    "docs:release": "npm run docs:build && SHA=$(git rev-parse --short HEAD) && ORIGIN=$(git config --get remote.origin.url) && TEMP=$(mktemp -d) && FROM=$(pwd) && git clone -b ghpages --single-branch $ORIGIN $TEMP && cd $TEMP && ls -A | grep -wv .git | xargs rm -rf && cp -R $FROM/docs/ $TEMP && git add . && git commit -m \"Updated docs ($SHA)\" && git push && rm -rf $TEMP"
  },
  "workspaces": [
    "./packages/roqueform",
    "./packages/constraint-validation-plugin",
    "./packages/doubter-plugin",
    "./packages/react",
    "./packages/ref-plugin",
    "./packages/reset-plugin",
    "./packages/scroll-to-error-plugin",
    "./packages/uncontrolled-plugin",
    "./packages/zod-plugin"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.26",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.2",
    "terser": "^5.16.1",
    "ts-jest": "^29.0.3",
    "tsd": "^0.25.0",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.4"
  }
}
